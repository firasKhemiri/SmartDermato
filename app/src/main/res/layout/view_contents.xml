<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/content_hist"
    android:gravity="center_vertical">


   <androidx.cardview.widget.CardView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:cardCornerRadius="20dp"
       android:layout_margin="8dp"
       android:id="@+id/card_view_image"
       >
        <RelativeLayout
            android:background="@drawable/btn_bg_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/brochure"
                android:scaleType="centerCrop"
                android:layout_width="250dp"
                android:layout_height="130dp"/>


            <ImageView
                android:id="@+id/date_img"
                android:layout_below="@id/image"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/time"
                android:layout_width="22dp"
                android:layout_height="22dp"/>

            <TextView
                android:id="@+id/date"
                android:textColor="#574F4F"
                android:layout_toEndOf="@id/date_img"
                android:layout_below="@id/image"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:text="4 days ago"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/pourcentage"
                android:textColor="#574F4F"
                android:layout_toStartOf="@+id/btn_share"
                android:layout_below="@id/image"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="7dp"
                android:text="40%"
                android:textStyle="bold"

                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />




            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@+id/image"
                android:layout_alignEnd="@+id/image"
                android:layout_centerInParent="true"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="3dp"/>



            <ImageView
                android:id="@+id/result_img"
                android:textColor="@color/white"
                android:layout_below="@id/date_img"
                android:layout_marginStart="14.5dp"
                android:layout_marginTop="3dp"
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/result"
                android:scaleType="fitXY"

                />



            <TextView
                android:id="@+id/result"
                android:textColor="#574F4F"
                android:layout_toEndOf="@id/result_img"
                android:layout_below="@id/date_img"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:text="Psoriasis"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
   </androidx.cardview.widget.CardView>
</RelativeLayout>
</layout>